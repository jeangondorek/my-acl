{
  "openapi": "3.0.0",
  "info": {
    "title": "ACL API",
    "description": "API para controle de acesso e listas",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:4345",
      "description": "Local server"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["User"],
        "summary": "Registrar usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "isAdmin": {
                    "type": "boolean"
                  }
                },
                "example": {
                  "username": "jean",
                  "password": "senha_do_usuario",
                  "isAdmin": false
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário registrado com sucesso"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["User"],
        "summary": "Login do usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "example": {
                  "username": "senha_do_uSsuario",
                  "password": "senha_do_usuario"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Usuário logado com sucesso"
          }
        }
      }
    },
    "/list": {
      "post": {
        "tags": ["List"],
        "summary": "Criar lista",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Lista criada com sucesso"
          }
        }
      },
      "get": {
        "tags": ["List"],
        "summary": "Obter todas as listas",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Listas obtidas com sucesso"
          }
        }
      }
    },
    "/list/{id}": {
      "delete": {
        "tags": ["List"],
        "summary": "Excluir lista",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID da lista a ser excluída"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista excluída com sucesso"
          }
        }
      },
      "put": {
        "tags": ["List"],
        "summary": "Atualizar lista",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            },
            "description": "ID da lista a ser atualizada"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "PRDOS"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lista atualizada com sucesso"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Admin"],
        "summary": "Obter todos os usuários",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Usuários obtidos com sucesso"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "User",
      "description": "Endpoints relacionados a usuários"
    },
    {
      "name": "List",
      "description": "Endpoints relacionados a listas"
    },
    {
      "name": "Admin",
      "description": "Endpoints relacionados a administração"
    }
  ]
}
